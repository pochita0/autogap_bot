{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": false,
        "outDir": ".vercel/output",
        "rootDir": "."
    },
    "include": [
        "api/**/*.ts",
        "backend/src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "frontend",
        "backend/node_modules",
        "backend/dist",
        "backend/src/**/__tests__/**",
        "backend/src/scripts/**",
        "backend/tests/**",
        "backend/src/server.ts"
    ]
}